    <script>
        function fetchNotifications() {
            const notificationList = document.getElementById("notification-list");
            notificationList.innerHTML = "Cargando notificaciones..."; 
            fetch('/api/notifications') 
            .then(response => response.json())
            .then(data => {
                notificationList.innerHTML = '';
                if(data){
                    if (data.length === 0) {
                        notificationList.innerHTML = '<li class="text-center">No tienes notificaciones.</li>';
                    } else {
                        data.forEach(notification => {
                            const notificationDate = new Date(notification.Date).toLocaleString("es-ES", {
                                year: 'numeric',
                                month: 'long',
                                day: 'numeric',
                                hour: '2-digit',
                                minute: '2-digit'
                            });
    
                            const notificationItem = `
                                <li class="list-item">
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <h5 class="list-title text-primary">${notification.Message}</h5>
                                            <div class="list-details d-flex flex-wrap justify-content-between">
                                                <span><strong>De:</strong> ${notification.Sender}</span>
                                                <span><strong>Fecha:</strong> ${notificationDate}</span>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            `;
    
                            notificationList.innerHTML += notificationItem;
                        });
                
                    }
                }else {
                    notificationsContent.innerHTML = '<p>Error al cargar las notificaciones.</p>';
                }
            })
        }

        window.onload = fetchNotifications;
    </script>
